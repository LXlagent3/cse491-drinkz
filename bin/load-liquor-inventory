
import sys
import _mypath

from drinkz.load_bulk_data import load_bottle_types
from drinkz.load_bulk_data import load_inventory

def main(args):
   if len(args) != 3:
      print >>sys.stderr, 'Usage: %s bottle-types.csv inventory.csv'
      return -1

   BottleFilename = args[1]
   InventoryFilename = args[2]
   

   fp = open(BottleFilename)
   try:
      t = load_bottle_types(fp)
   finally:
      fp.close()

   print 'Loaded %d bottle types.' % t


   fp = open(InventoryFilename)
   try:
      n = load_inventory(fp)
   finally:
      fp.close()

   print 'Loaded %d into inventory.' % n
   return 0
    


if __name__ == '__main__':
   exit_code = main(sys.argv)
   sys.exit(exit_code)
